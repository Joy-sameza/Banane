{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["**/node_modules/**"],
  "include": ["src/**/*.ts"]
}
