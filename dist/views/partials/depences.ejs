<div class="modal depences">
  <div class="modal-content">
    <form>
      <div class="form-heading">
        <h1 class="title">Dépences</h1>
        <input
          class="close-modal"
          type="button"
          value="&times;"
          style="
            background: none;
            width: min-content;
            height: min-content;
            font-size: 2.5rem;
            position: absolute;
            right: 0;
            top: 0;
            cursor: pointer;
          "
        />
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input type="date" name="date" id="date" />
        <small
          id="helpId"
          class="text-muted"
          style="display: block; opacity: 1; color: #888; cursor: default"
        >
          Date d'aujourd'hui (Par défaut)</small
        >
      </div>
    </form>
  </div>
</div>
